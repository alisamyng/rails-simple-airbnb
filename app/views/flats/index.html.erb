<h1>All our Flats</h1>

<div id="flats-container">
  <% @flats.each do |flat| %>
    <div class="card">
      <div class="card-name">
          <h3><%= flat.name %></h3>
      </div>
      <div class="card-address">
        <p><%= flat.address %></p>
      </div>
      <div class="card-description">
        <p><%= flat.description %></p>
      </div>
      <div class="card-price">
        <p><%= flat.price_per_night %></p>
      </div>
      <div class="card-guests"
        <p><%= flat.number_of_guests %></p>
      </div>
      <%= link_to "Delete", flat_path(flat),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
    </div>
  <% end %>
</div>

<%= link_to 'Add Flat', new_flat_path %>
